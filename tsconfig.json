{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "CommonJS",
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "src/**/*.json",
    "test/**/*.ts",
  ],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}

